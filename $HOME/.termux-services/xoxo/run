#!/data/data/com.termux/files/usr/bin/bash
# Servicio backend XOXO para Termux
# Ejecuta FastAPI + Uvicorn en segundo plano usando runit

# Ir al backend del proyecto
cd $HOME/HormigasAIS-video-intelligence-checker/backend

# Activar el entorno virtual
source venv/bin/activate

# Ejecutar Uvicorn como proceso del servicio
exec uvicorn api:app --host 0.0.0.0 --port 8000
